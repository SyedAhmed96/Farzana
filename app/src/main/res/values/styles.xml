<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <!-- Primary theme color of the app(sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!--  background color of button in the app -->
        <item name="colorButtonNormal" tools:targetApi="lollipop">#FF9800</item>

        <item name="titleTextColor">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
