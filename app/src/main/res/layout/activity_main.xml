<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmed.farzana.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2"
               android:orientation="horizontal">


               <ImageView
                   android:id="@+id/photo_image_view"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   android:src="@drawable/rsz_main1" />


           </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    android:text="Farzana Dawa Khana"
                    android:layout_gravity="center"
                    android:textSize="35sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/textView"
                    android:textStyle="italic"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center"
                    android:text="Alternative medicine practitioner in Karachi, Pakistan"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12sp"
                    android:textStyle="normal"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <ImageView
                        android:layout_marginLeft="23dp"
                        android:id="@+id/photo_locationIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/visit_icon"
                        android:layout_marginStart="23dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Location"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_marginLeft="28dp"
                        android:id="@+id/textView2"
                        android:layout_below="@id/photo_locationIcon"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Federal B Area, Karachi, Sindh"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/textView3"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_centerHorizontal="true" />



                    <ImageView
                        android:id="@+id/photo_phoneIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/phone_icon"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/textView2"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Phone"
                        android:textColor="@color/colorAccent"
                        android:layout_below="@id/photo_phoneIcon"
                        android:layout_marginLeft="28dp"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(021) 36314936"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignStart="@+id/textView3" />

                </RelativeLayout>


            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"></View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:context="com.example.android.courtcounter.MainActivity">


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:text="Contact Us"
                        android:onClick="contactUs"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/button_contactus"
                        />


                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/darker_gray"></View>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="1dp"
                    android:background="@android:color/darker_gray"></View>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    tools:context="com.example.android.courtcounter.MainActivity">



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:text="Our Products"
                        android:onClick="ourProducts"
                        android:id="@+id/button_ourproducts"
                        android:textColor="@color/colorAccent"
                        />


                </LinearLayout>


            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"></View>


            <ImageView
                android:id="@+id/photo_copyrightLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/copyrighticon"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017 LiveWise"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp" />


        </LinearLayout>


    </RelativeLayout>


</ScrollView>
